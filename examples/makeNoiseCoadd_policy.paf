#<? cfg paf policy ?>

# save intermediate images?
saveDebugImages: false

# shape of images
imageShape: 256 256

# image sigma
imageSigma: 1.0

# constant variance
variance: 1.0

# Mask planes to allow (ignore) when rejecting masked pixels.
# Specify as a space-separated list of mask plane names.
# Not relevant for pure noise images, but use the usual default
allowedMaskPlanes: "BAD SAT INTRP"

# warp exposures to match the reference exposure?
# (no need for pure noise images)
doWarpExposures: false


